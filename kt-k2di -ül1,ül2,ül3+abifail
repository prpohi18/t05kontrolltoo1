//ÜLESANNE 1

//* Koosta funktsioon kolme arvu keskmise arvutamiseks nõnda, 
//et esimesest ja viimasest võetakse pool, keskmisest kõik ning jagatakse tulemus kahega.
//Katseta.

// ARV: 469  ARVUTUSKÄIK: ((4/2)+8+(8/2))/2 -> (2+8+4)/2
import java.net.*;
import java.io.*;

public class Yl1{
	public static void main(String[] arg) throws Exception{ //throws Exception annab teada, kui võrk maas või mingi muu ootamatus
		String aadress="http://www.tlu.ee/~k2di/pohikursus/esimene_teine_kolmas.txt"; //aadress, kust võtad enda andmed
		BufferedReader br=new BufferedReader(new InputStreamReader(new URL(aadress).openStream())); //veebist lugemiseks
		String rida=br.readLine(); //1. on pealkirja rida
		if(!rida.startsWith("eristus")){
			System.out.println("sobiva pealkirjata fail");
			return;
		}
		rida=br.readLine();
		System.out.println("Andmed failis:");
		int esimene=0;
		int teine=0;
		int kolmas=0;
		while(rida!=null){
			System.out.println(rida);
			String[] m=rida.split(",");
			if(m[0].equals("esimene")){
				esimene+=Integer.parseInt(m[1]);
			}
			rida=br.readLine();
			if(m[0].equals("teine")){ 
				teine+=Integer.parseInt(m[1]); 
			} 
			//rida=br.readLine();
			if(m[0].equals("kolmas")){ 
				kolmas+=Integer.parseInt(m[1]); 
			}
		}
		System.out.println("Võttes esimesest ja viimasest arvust pool, keskmisest kõik, siis jagades nende summa 2-ga on vastus: "+((esimene/2)+teine+(kolmas/2))/2);
		
	}
}

//VÄLJATRÜKK

//Andmed failis:
//esimene,8
//teine,8
//kolmas,2
//Võttes esimesest ja viimasest arvust pool, keskmisest kõik, siis jagades nende summa 2-ga on vastus: 6

//***********************************************************************************************************************************
//ÜLESANNE 2
//* Funktsioonile antakse kogumina ette arvud. Kronoloogilise keskmise arvutamiseks
//võetakse esimesest ja viimasest arvust pool, liidetakse muud arvud ning summa
//jagatakse andmestiku pikkusest ühe võrra väiksema arvuga.


import java.net.*; 
import java.io.*;
public class Yl2{
	public static void main(String[] arg) throws Exception{ //throws Exception annab teada, kui võrk maas või mingi muu ootamatus
		String aadress="http://www.tlu.ee/~k2di/pohikursus/Numbrid.txt"; //aadress, kust võtad enda andmed
		BufferedReader br=new BufferedReader(new InputStreamReader(new URL(aadress).openStream())); //veebist lugemiseks
		String rida=br.readLine(); //1. on pealkirja rida
		if(!rida.startsWith("eristus")){
			System.out.println("sobiva pealkirjata fail");
			return;
		}
		rida=br.readLine();
		System.out.println("Andmed failis:");
		int keskmistesumma=0;
		int jagatavatesumma=0;
		while(rida!=null){
			System.out.println(rida);
			String[] m=rida.split(",");
			if(m[0].equals("aarmine")){
				jagatavatesumma+=Integer.parseInt(m[1]);
			}
			rida=br.readLine();
			if(m[0].equals("keskmine")){ 
				keskmistesumma+=Integer.parseInt(m[1]); 
			} 
		}
		System.out.println("Keskmiste arvude summa: "+keskmistesumma+".");
		System.out.println("Esimese ja viimase arvu summa jagatud pooleks: "+jagatavatesumma/2+".");
		System.out.println("Arvude kronoloogiline keskmine: "+(keskmistesumma+(jagatavatesumma/2))/6+".");
	}
}

//VÄLJATRÜKK

//Andmed failis:
//aarmine,200
//keskmine,12
//keskmine,35
//keskmine,644
//keskmine,5
//keskmine,32
//aarmine,600
//Keskmiste arvude summa: 728.
//Esimese ja viimase arvu summa jagatud pooleks: 400.
//Arvude kronoloogiline keskmine: 188.

